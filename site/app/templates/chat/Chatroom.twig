<div class="content chatroom-page">
    <div class="chatroom-container">
        <div class="chatroom-header">
            <span class="chatroom-title">{{ chatroom.getTitle() }}</span>
            <a href="{{ base_url }}" class="leave-room btn btn-danger">leave</a>
        </div>
        <div class="chatroom-content">
            <div class="messages-area"></div>
            <div class="input-container">
                    <textarea name="content" class="message-input" placeholder="enter your message here..." maxlength=1500></textarea>
                <button class="send-message-btn btn btn-primary">Send</button>
            </div>
        </div>
    </div>
</div>
<script type="application/json" id="page-data">
    {
        "chatroomId": "{{ chatroom.getId() }}",
        "baseURL": "{{ base_url }}",
        "userId": "{{ user_id }}",
        "displayName": "{{ user_display_name }}",
        "user_admin": "{{ user_admin }}"
    }
</script>