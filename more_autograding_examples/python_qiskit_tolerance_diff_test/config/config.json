{
	"required_capabilities": "python",
    "grading_parameters": {
        "TOTAL_POINTS": 25,
        "AUTO_POINTS": 25
    },
    "autograding" : {
        "work_to_details" : [ "**/*.png, **/*.txt, **/*.json" ]
    },
    "autograding_method": "docker",
    "container_options": {
        "container_image": "submitty/qiskit:latest"
    },
    
    "resource_limits" : {
        "RLIMIT_NPROC" : 10
    },

    "testcases" : [
        {
            "title" : "Double H Gate Probabilities - Histogram Diff",
            "command" : "python3 *.py",
            "points" : 5,
            "validation" : [
                {
                    "actual_file": "histogram.png",
                    "expected_file": "expected.png",
                    "method": "ImageDiff",
                    "acceptable_threshold": ".1",
                    "show_difference_image" : "always",
                    "show_actual": "always",
                    "show_expected":"always"
                }
            ]
        },
        {
            "title" : "Double H Gate Probabilities - Float Diff",
            "command" : "python3 *.py",
            "points" : 5,
            "validation": [
                {
                    "description": "diff",
                    "method": "diff",
                    "actual_file": "STDOUT.txt",
                    "expected_file": "expected.txt",
                    "deduction": 1,
                    "failure_message":"These files do not exactly match."
                }
            ]
        },
        {
            "title" : "Double H Gate Probabilities - Float Diff (Tolerance = .025)",
            "command" : "python3 *.py",
            "points" : 5,
            "validation": [
                {
                    "method": "diff",
                    "tolerance": 0.025,
                    "actual_file": "STDOUT.txt",
                    "expected_file": "expected.txt"
                }
            ]
        },
        {
            "title" : "Double H Gate Probabilities - Float Diff (ignore whitespace)",
            "command" : "python3 *.py",
            "points" : 5,
            "validation": [
                {
                    "method": "diff",
                    "ignoreWhitespace": true,
                    "actual_file": "STDOUT.txt",
                    "expected_file": "expected.txt"
                }
            ]
        },
        {
            "title" : "Double H Gate Probabilities - Float Diff (Tolerance = .025, ignore whitespace)",
            "command" : "python3 *.py",
            "points" : 5,
            "validation": [
                {
                    "method": "diff",
                    "ignoreWhitespace": true,
                    "tolerance": 0.025,
                    "actual_file": "STDOUT.txt",
                    "expected_file": "expected.txt"
                }
            ]
        }
    ]
}
