{
	"required_capabilities": "python",
    "grading_parameters": {
        "TOTAL_POINTS": 15,
        "AUTO_POINTS": 15
    },
    "autograding_method": "docker",
    "container_options": {
        "container_image": "submitty/qiskit:latest"
    },
    
    "resource_limits" : {
        "RLIMIT_NPROC" : 10
    },

    "testcases" : [
        {
            "title" : "X-Gate Identity",
            "command" : "python3 *.py x_gate_identity",
            "points" : 5,
            "validation" : [
                {
                    "method" : "diff",
                    "actual_file" : "STDOUT.txt",
                    "description" : "Program Output",
                    "expected_file" : "x.txt"
                },
                {
                    "actual_file": "x_gate_identity_circuit",
                    "method": "fileExists",
                    "show_actual": "always"
                },
